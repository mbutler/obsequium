{#
  Modal Component
  Per compliance spec ยง6.12
  
  Usage:
  {% include "components/modal.njk" with {
    id: "contact-modal",
    title: "Contact Us",
    triggerLabel: "Open contact form",
    triggerClass: "btn btn--primary",
    content: "<p>Modal content here</p>"
  } %}
#}

<button 
  type="button" 
  class="{{ triggerClass or 'btn btn--primary' }}"
  data-modal-trigger="{{ id }}"
>
  {{ triggerLabel }}
</button>

<div class="modal-backdrop" data-modal-backdrop="{{ id }}" data-open="false"></div>

<div 
  class="modal"
  id="{{ id }}"
  role="dialog"
  aria-modal="true"
  aria-labelledby="{{ id }}-title"
  data-open="false"
>
  <div class="modal__header">
    <h2 class="modal__title" id="{{ id }}-title">{{ title }}</h2>
    <button 
      type="button" 
      class="modal__close"
      aria-label="{{ closeLabel or 'Close' }}"
    >
      <svg aria-hidden="true" focusable="false" width="24" height="24" viewBox="0 0 24 24">
        <path fill="currentColor" d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
      </svg>
    </button>
  </div>
  
  <div class="modal__body">
    {{ content | safe }}
  </div>
  
  {% if footer %}
  <div class="modal__footer">
    {{ footer | safe }}
  </div>
  {% endif %}
</div>
